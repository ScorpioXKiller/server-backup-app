{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build all files",
        "command": "g++",
        "args": [
          "-g3",
          "-Wall",
          "-m32",
          "-std=c++17",
          "\"${fileDirname}\"/*.cpp",
          "-o",
          "\"${fileDirname}/${fileBasenameNoExtension}.exe\""
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },

      {
        "type": "cppbuild",
        "label": "server C/C++: g++ build all files",
        "command": "g++",
        "args": [
          "-g3",
          "-Wall",
          "-std=c++17",
          "\"${fileDirname}\"/*.cpp",
          "-I/usr/include",
          "-L/usr/lib",
          "-lboost_system",
          "-lboost_thread",
          "-lboost_filesystem",
          "-lpthread",
          "-o",
          "\"${fileDirname}/${fileBasenameNoExtension}.exe\""
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
    ]
  }
  